doctype
html
  head
    title Electrodynamics
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)
  body
    .container
      - if notice
        div.alert.alert-info
          = notice
      - if alert
        div.alert.alert-danger
          = alert
      = yield